<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/withe"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_16"
        android:layout_marginRight="@dimen/px_16"
        android:background="@color/main_hg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺名称："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/shop_name"
                style="@style/layout_height_wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入店铺名称"
                android:paddingLeft="0dp"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/shop_name_amend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blue_bg"
                android:padding="@dimen/px_10"
                android:text="申请修改"
                android:textColor="@color/withe"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺分类："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/shop_type"
                style="@style/layout_height_wrap_content"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:drawableRight="@mipmap/app_go_back"
                android:hint="请选择店铺分类"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:tag="-1"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在地区："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/shop_area"
                style="@style/layout_height_wrap_content"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:drawableRight="@mipmap/app_go_back"
                android:hint="请选择店铺地区"
                android:inputType="none"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:tag="-1"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺地址："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/shop_address"
                style="@style/layout_height_wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableRight="@mipmap/app_go_back"
                android:hint="请选择店铺地址"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        style="@style/layout_height_40"
        android:background="#ededed">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="店主信息"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_16"
        android:layout_marginRight="@dimen/px_16"
        android:background="@color/main_hg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店主姓名："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/shop_men_name"
                style="@style/layout_height_wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入店主姓名"
                android:maxLines="1"
                android:paddingLeft="0dp"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/shop_men_name_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/withe"
                android:text="已认证"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店主手机："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/shop_men_mobile"
                style="@style/layout_height_wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入店主手机"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingLeft="0dp"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/shop_men_mobile_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/withe"
                android:text="已绑定"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店主邮箱："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/shop_men_e_mail"
                style="@style/layout_height_wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入店主邮箱"
                android:paddingLeft="0dp"
                android:tag="-1"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/shop_men_e_mail_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/withe"
                android:text="已绑定"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他电话："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/shop_men_phone"
                style="@style/layout_height_wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入其他电话"
                android:inputType="phone"
                android:paddingLeft="0dp"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q  Q号码："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/shop_men_qq"
                style="@style/layout_height_wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入QQ"
                android:inputType="phone"
                android:paddingLeft="0dp"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/layout_height_40"
        android:background="#ededed">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="店铺简介"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <EditText
        android:id="@+id/shop_info"
        style="@style/layout_height_wrap_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_200"
        android:background="@color/withe"
        android:gravity="top"
        android:hint="请输入店铺简介或配送范围"
        android:textColor="@color/text_color_333"
        android:textColorHint="@color/text_color_999"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>