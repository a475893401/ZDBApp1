<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bill_appoint_hint"
        style="@style/layout_height_wrap_content"
        android:background="#ededed"
        android:text="提示：你将指定给店铺发单"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <include layout="@layout/layout_super_recycler_view" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bill_ok_but"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:background="@drawable/shape_hg_red"
            android:text="立即发布"
            android:textColor="@color/withe"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

</LinearLayout>