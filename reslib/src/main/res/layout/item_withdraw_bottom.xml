<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/divider_height"
        android:background="@color/withe"
        android:paddingLeft="@dimen/px_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额："
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/withdraw_input_money"
            style="@style/layout_height_wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="请输入提现金额"
            android:inputType="phone"
            android:maxLines="1"
            android:textColor="@color/text_color_333"
            android:textColorHint="@color/text_color_999"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/divider_height"
        android:background="@color/withe"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_16"
        android:paddingRight="@dimen/px_16">

        <EditText
            android:id="@+id/withdraw_verify_code"
            style="@style/layout_height_wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLines="1"
            android:paddingLeft="0dp"
            android:textColor="@color/text_color_333"
            android:textColorHint="@color/text_color_999"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/withdraw_get_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue_bg"
            android:padding="@dimen/px_10"
            android:text="获取验证码"
            android:textColor="@color/withe"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="@dimen/px_16"
        android:paddingRight="@dimen/px_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/divider_height"
        android:background="@color/withe">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付密码："
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/text_size_16" />

        <EditText
            style="@style/layout_height_wrap_content"
            android:id="@+id/withdraw_pass"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint=""
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/text_color_333"
            android:textColorHint="@color/text_color_999"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:paddingRight="@dimen/px_8">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/withdraw_forget_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/px_8"
            android:text="忘记密码？"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <LinearLayout
        style="@style/layout_height_wrap_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/divider_height"
        android:background="@color/withe">

        <TextView
            android:id="@+id/withdrawals_hint_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/withdrawals_hint_message"
            android:textColor="@color/red"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>