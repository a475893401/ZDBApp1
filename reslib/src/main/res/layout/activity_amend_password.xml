<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingRight="@dimen/px_16"
        android:paddingLeft="@dimen/px_16"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/withe">

        <TextView
            android:text="旧  密  码："
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/amend_old_pass"
            android:maxLines="1"
            android:inputType="textPassword"
            style="@style/layout_height_wrap_content"
            android:background="@android:color/transparent"
            android:hint="请输入以前的密码"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <LinearLayout
        android:paddingRight="@dimen/px_16"
        android:paddingLeft="@dimen/px_16"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/divider_height"
        android:background="@color/withe">

        <TextView
            android:text="新  密  码："
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/amend_new_pass"
            style="@style/layout_height_wrap_content"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:inputType="textPassword"
            android:hint="请输入新的密码"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <LinearLayout
        android:paddingRight="@dimen/px_16"
        android:paddingLeft="@dimen/px_16"
        android:layout_marginTop="@dimen/divider_height"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/withe">

        <TextView
            android:text="确认密码："
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/amend_re_pass"
            style="@style/layout_height_wrap_content"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:inputType="textPassword"
            android:hint="请再次确认密码"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>


    <LinearLayout
        android:paddingRight="@dimen/px_20"
        android:paddingLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_but_bule_hg"/>
    </LinearLayout>

</LinearLayout>