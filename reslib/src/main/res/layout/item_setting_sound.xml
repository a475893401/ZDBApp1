<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        style="@style/layout_height_wrap_content"
        android:layout_marginTop="@dimen/divider_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="推送声音"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />

        <app.zhuandanbao.com.reslib.widget.SwitchView
            android:id="@+id/status"
            android:layout_width="@dimen/px_80"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:visibility="gone"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_20"
        android:background="@color/main_hg" />

</LinearLayout>