<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <app.zhuandanbao.com.reslib.widget.MyViewPager
        android:id="@+id/main_viewpager"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </app.zhuandanbao.com.reslib.widget.MyViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="#f2f2f2">

        <com.lhh.apst.library.CustomPagerSlidingTabStrip
            android:id="@+id/main_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe"
            app:apTabDividerColor="@color/withe"
            app:apTabIndicatorHeight="0dp"
            app:apTabBackground="@drawable/nvs_tab_bg_normal"
            app:apTabUnderlineColor="#fff" />
    </LinearLayout>

</LinearLayout>
