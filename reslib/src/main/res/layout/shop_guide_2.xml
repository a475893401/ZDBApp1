<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/withe"
    android:weightSum="3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="@dimen/px_16"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginRight="@dimen/px_16"
            android:padding="@dimen/px_16"
            android:id="@+id/shop_guide2_finish"
            android:src="@mipmap/img_shop_guide_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发单方入驻流程"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/shop_guide_60_dimen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_10"
            android:text="入驻转单宝，轻松管理多平台订单"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/shop_guide_28_dimen" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/shop_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_70"
            android:layout_marginRight="@dimen/px_70"
            android:background="@drawable/shop_guide_bg"
            android:orientation="vertical"
            android:padding="@dimen/px_25">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@mipmap/img_shop_guide_home" />
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/px_30"
                    android:text="店铺基本信息"
                    android:textColor="@color/shop_guide_h2_color"
                    android:textSize="@dimen/shop_guide_38_dimen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/shop_info_hint_tx"
                    android:text="已完善"
                    android:textColor="@color/shop_guide_h1_color"
                    android:textSize="@dimen/shop_guide_28_dimen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/shop_info_hint_img"
                    android:layout_marginLeft="@dimen/px_16"
                    android:src="@mipmap/img_shop_guide_check"
                    android:layout_width="@dimen/px_30"
                    android:layout_height="@dimen/px_30" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_60">
            <ImageView
                android:src="@mipmap/img_shop_guide_more"
                android:scaleType="centerInside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_contact_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_70"
            android:layout_marginRight="@dimen/px_70"
            android:background="@drawable/shop_guide_bg"
            android:orientation="vertical"
            android:padding="@dimen/px_25">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@mipmap/img_shop_guide_user" />

                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/px_30"
                    android:text="店铺联系人"
                    android:textColor="@color/shop_guide_h2_color"
                    android:textSize="@dimen/shop_guide_38_dimen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" />

                <TextView
                    android:id="@+id/shop_contact_hint_tx"
                    android:text="去设置"
                    android:textColor="@color/shop_guide_h2_color"
                    android:textSize="@dimen/shop_guide_28_dimen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/shop_contact_hint_img"
                    android:layout_marginLeft="@dimen/px_16"
                    android:src="@mipmap/img_shop_guide_right"
                    android:layout_width="@dimen/px_30"
                    android:layout_height="@dimen/px_30" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_60">
            <ImageView
                android:src="@mipmap/img_shop_guide_more"
                android:scaleType="centerInside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_pay_pass_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_70"
            android:layout_marginRight="@dimen/px_70"
            android:background="@drawable/shop_guide_bg"
            android:orientation="vertical"
            android:padding="@dimen/px_25">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@mipmap/img_shop_guide_safe" />
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/px_30"
                    android:text="支付密码设置"
                    android:textColor="@color/shop_guide_h2_color"
                    android:textSize="@dimen/shop_guide_38_dimen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/shop_pay_pass_hint_tx"
                    android:text="去设置"
                    android:textColor="@color/shop_guide_h2_color"
                    android:textSize="@dimen/shop_guide_28_dimen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/shop_pay_pass_hint_img"
                    android:layout_marginLeft="@dimen/px_16"
                    android:src="@mipmap/img_shop_guide_right"
                    android:layout_width="@dimen/px_30"
                    android:layout_height="@dimen/px_30" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px_16">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新设置店铺类型"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/shop_guide_28_dimen" />

        <ImageView
            android:id="@+id/shop_guide2_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/px_16"
            android:src="@mipmap/img_shop_guide_back" />
    </LinearLayout>
</LinearLayout>