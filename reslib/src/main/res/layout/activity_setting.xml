<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_hg"
    android:orientation="vertical">

    <LinearLayout
        style="@style/layout_height_wrap_content"
        android:layout_marginBottom="@dimen/px_16"
        android:layout_marginTop="@dimen/divider_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="推送声音"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />

        <app.zhuandanbao.com.reslib.widget.SwitchView
            android:id="@+id/status_0"
            android:layout_width="@dimen/px_80"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout_height_wrap_content"
        android:layout_marginBottom="@dimen/divider_height"
        android:layout_marginTop="@dimen/divider_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="新抢单提醒声音"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />

        <app.zhuandanbao.com.reslib.widget.SwitchView
            android:id="@+id/status_1"
            android:layout_width="@dimen/px_80"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout_height_wrap_content"
        android:layout_marginBottom="@dimen/divider_height"
        android:layout_marginTop="@dimen/divider_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单状态改变提醒声音"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />

        <app.zhuandanbao.com.reslib.widget.SwitchView
            android:id="@+id/status_2"
            android:layout_width="@dimen/px_80"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout_height_wrap_content"
        android:layout_marginBottom="@dimen/divider_height"
        android:layout_marginTop="@dimen/divider_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="售后提醒声音"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />

        <app.zhuandanbao.com.reslib.widget.SwitchView
            android:id="@+id/status_3"
            android:layout_width="@dimen/px_80"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout_height_wrap_content"
        android:layout_marginBottom="@dimen/px_16"
        android:layout_marginTop="@dimen/divider_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="接单推送声音"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />

        <app.zhuandanbao.com.reslib.widget.SwitchView
            android:id="@+id/status_4"
            android:layout_width="@dimen/px_80"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/updata_layout"
        style="@style/layout_height_wrap_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/divider_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="版本更新"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/updata_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/px_10"
            android:drawableRight="@mipmap/app_go_back"
            android:text="v1.3.6"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_40"
        android:gravity="center">

        <Button
            android:id="@+id/but"
            android:layout_width="@dimen/px_260"
            android:layout_height="@dimen/px_80"
            android:background="@drawable/btn_blue_2_bg"
            android:text="安全退出"
            android:textColor="@color/withe"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

</LinearLayout>