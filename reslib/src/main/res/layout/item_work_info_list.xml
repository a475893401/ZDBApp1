<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/px_8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        style="@style/layout_height_wrap_content">

        <TextView
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/px_8"
            android:drawableLeft="@mipmap/img_nvs_shop"
            android:id="@+id/img_hint"
            android:layout_weight="1"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/time"
            android:gravity="right"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/divider_height"
        style="@style/layout_height_wrap_content">

        <TextView
            android:paddingTop="0dp"
            android:text="實踐活動後端回電話"
            android:id="@+id/content"
            style="@style/layout_height_wrap_content"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/item_recycler_img"/>

    </LinearLayout>
</LinearLayout>