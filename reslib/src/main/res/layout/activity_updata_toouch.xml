<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/main_hg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/divider_height"
            android:background="@color/withe"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓        名："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:textColorHint="@color/text_color_999"
                android:id="@+id/touch_name"
                style="@style/layout_height_wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入联系人姓名(必填)"
                android:maxLines="1"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/divider_height"
            android:background="@color/withe"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:textColorHint="@color/text_color_999"
                android:id="@+id/touch_mobile"
                style="@style/layout_height_wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入联系人手机号(必填)"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/divider_height"
            android:background="@color/withe"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职        务："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/touch_job"
                style="@style/layout_height_wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableRight="@mipmap/app_go_back"
                android:hint="请选择职务"
                android:maxLines="1"
                android:tag="0"
                android:text="负责人"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/divider_height"
            android:background="@color/withe"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他电话："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:textColorHint="@color/text_color_999"
                android:id="@+id/touch_phone"
                style="@style/layout_height_wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入电话"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/divider_height"
            android:background="@color/withe"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q  Q 号码："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:textColorHint="@color/text_color_999"
                android:id="@+id/touch_qq"
                style="@style/layout_height_wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入QQ"
                android:maxLines="1"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/divider_height"
            android:background="@color/withe"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E  - mail  ："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:textColorHint="@color/text_color_999"
                android:id="@+id/touch_mail"
                style="@style/layout_height_wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="请输入邮箱"
                android:maxLines="1"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_but_bule_hg" />
</LinearLayout>