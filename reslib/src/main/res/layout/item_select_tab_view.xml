<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:padding="@dimen/px_5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="centerCrop"
                android:padding="@dimen/px_3"
                android:id="@+id/select_radio_img"
                android:layout_width="@dimen/nvs_img_size"
                android:layout_height="@dimen/nvs_img_size" />

            <TextView
                android:id="@+id/select_radio_text"
                android:text="发单"
                android:textSize="@dimen/nvs_text_size"
                android:textColor="@color/nvs_textColor_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:gravity="top|right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginRight="@dimen/px_8"
                android:id="@+id/msg_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yuan_msg_hg_red"
                android:gravity="center"
                android:text=""
                android:textColor="@color/withe"
                android:textSize="@dimen/text_size_10"
                android:visibility="gone" />
        </RelativeLayout>
</FrameLayout>