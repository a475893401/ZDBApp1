<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/withe"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/layout_height_40">

        <ImageView
            android:id="@+id/pay_back"
            android:layout_centerVertical="true"
            android:src="@mipmap/left_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="输入密码"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>

    <RelativeLayout
        android:padding="@dimen/px_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/pass_hg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_pass"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="转单宝支付密码"
                android:maxLines="1"
                android:inputType="textPassword"
                android:text=""
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16"
                style="@style/layout_height_40"
                android:background="@android:color/transparent"/>

            <View
                android:layout_marginBottom="@dimen/px_16"
                android:layout_marginTop="@dimen/px_16"
                android:background="@color/text_color_999"
                android:layout_width="@dimen/divider_height"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/pay_but"
                android:layout_marginRight="@dimen/px_8"
                android:layout_marginLeft="@dimen/px_8"
                android:padding="@dimen/px_16"
                android:text="付款"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="@dimen/px_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/forget_pass"
            android:layout_marginTop="@dimen/px_40"
            android:layout_marginRight="@dimen/px_20"
            android:text="忘记密码？"
            android:layout_alignParentRight="true"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>