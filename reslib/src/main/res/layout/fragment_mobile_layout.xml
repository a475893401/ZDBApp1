<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/withe"
    android:paddingLeft="@dimen/px_20"
    android:paddingRight="@dimen/px_20"
    android:orientation="vertical">
    <EditText
        android:textColorHint="@color/text_color_999"
        android:id="@+id/mobile_et"
        android:layout_marginTop="@dimen/px_32"
        android:maxLines="1"
        android:inputType="phone"
        android:drawablePadding="@dimen/px_10"
        android:drawableLeft="@mipmap/img_login_name"
        android:hint="请输入手机号"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:background="@android:color/transparent"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/text_size_16" />
    <View
        android:background="@color/text_color_999"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"/>

    <LinearLayout
        android:layout_marginTop="@dimen/px_16"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textColorHint="@color/text_color_999"
            android:id="@+id/verify_et"
            android:layout_weight="1"
            android:maxLength="8"
            android:drawablePadding="@dimen/px_10"
            android:drawableLeft="@mipmap/img_login_pwd"
            android:hint="请输入验证码"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_80"
            android:background="@android:color/transparent"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/get_verify_but"
            android:padding="@dimen/px_10"
            android:background="@drawable/btn_blue_bg"
            android:text="获取验证码"
            android:textColor="@color/withe"
            android:textSize="@dimen/text_size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/text_color_999"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"/>

    <include layout="@layout/item_login_but_layout"/>

</LinearLayout>