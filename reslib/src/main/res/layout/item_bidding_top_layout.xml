<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/layout_height_40">

        <TextView
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/order_sn"
            android:text=""
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/order_status_text"
            android:layout_alignParentRight="true"
            android:text="待付款"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        style="@style/layout_height_40"
        android:layout_marginTop="@dimen/divider_height">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="发布抢单价"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/order_money"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/px_8"
            android:text="￥ 00.0"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        style="@style/layout_height_wrap_content"
        android:background="@color/main_hg"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

        <TextView
            style="@style/layout_height_wrap_content"
            android:background="@drawable/bidding_hint_hg"
            android:lineSpacingMultiplier="1.2"
            android:text="温馨提示：\n选择竞价店铺表示知晓并接受其竞单报价，并将该订单派发至此店铺！"
            android:textColor="#25638c"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>
</LinearLayout>