<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/item_approve_top_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/divider_height"
        android:background="@color/withe"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_16">

        <TextView
            android:drawablePadding="@dimen/px_4"
            android:drawableLeft="@mipmap/img_xin_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店主姓名"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/approve_shop_name"
            style="@style/layout_height_wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="请输入店主姓名"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/divider_height"
        android:background="@color/withe"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_16">

        <TextView
            android:drawablePadding="@dimen/px_4"
            android:drawableLeft="@mipmap/img_xin_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="证件号码"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/approve_card_id"
            style="@style/layout_height_wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="请输入店主身份证号码"
            android:maxLines="1"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <include layout="@layout/item_approve_card_layout"/>

    <include layout="@layout/item_approve_com_layout"/>

    <include layout="@layout/item_approve_shop_pic"/>

</LinearLayout>