<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/withe"
    android:weightSum="3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎入驻转单宝"
            android:textColor="@color/shop_guide_h1_color"
            android:textSize="@dimen/shop_guide_60_dimen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_10"
            android:text="请选择你的店铺类型"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/shop_guide_28_dimen" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/bill_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_70"
            android:layout_marginRight="@dimen/px_70"
            android:background="@drawable/shop_guide_bg"
            android:orientation="vertical"
            android:padding="@dimen/px_25">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@mipmap/img_shop_guide_bill" />

                <LinearLayout
                    android:layout_marginLeft="@dimen/px_30"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:drawableRight="@mipmap/img_shop_guide_right"
                        android:text="我是发单方"
                        android:textColor="@color/shop_guide_h2_color"
                        android:textSize="@dimen/shop_guide_38_dimen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/bill_num"
                        android:layout_marginTop="@dimen/px_18"
                        android:text="已有XX家网店通过转单宝管理订单"
                        android:textColor="@color/shop_guide_h1_color"
                        android:textSize="@dimen/shop_guide_23_dimen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_22"
                android:text="我有淘宝/京东/外卖等网店，想统一管理订单"
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/shop_guide_23_dimen" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/taking_layout"
            android:layout_marginTop="@dimen/px_60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_70"
            android:layout_marginRight="@dimen/px_70"
            android:background="@drawable/shop_guide_bg"
            android:orientation="vertical"
            android:padding="@dimen/px_25">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@mipmap/img_shop_guide_taking" />

                <LinearLayout
                    android:layout_marginLeft="@dimen/px_30"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:drawableRight="@mipmap/img_shop_guide_right"
                        android:text="我是接单方"
                        android:textColor="@color/shop_guide_h2_color"
                        android:textSize="@dimen/shop_guide_38_dimen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/taking_num"
                        android:layout_marginTop="@dimen/px_18"
                        android:text="已有XX家店铺累计接到XX个订单"
                        android:textColor="@color/shop_guide_h1_color"
                        android:textSize="@dimen/shop_guide_23_dimen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_22"
                android:text="我是实体花店/蛋糕店，想通过转单宝接单"
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/shop_guide_23_dimen" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>