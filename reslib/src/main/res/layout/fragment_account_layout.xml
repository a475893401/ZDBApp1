<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/withe"
    android:paddingLeft="@dimen/px_20"
    android:paddingRight="@dimen/px_20">

    <EditText
        android:textColorHint="@color/text_color_999"
        android:id="@+id/account_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:layout_marginTop="@dimen/px_32"
        android:background="@android:color/transparent"
        android:drawableLeft="@mipmap/img_login_name"
        android:drawablePadding="@dimen/px_10"
        android:hint="请输入用户名"
        android:maxLines="1"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/text_size_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/text_color_999" />

    <EditText
        android:textColorHint="@color/text_color_999"
        android:id="@+id/password_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80"
        android:layout_marginTop="@dimen/px_16"
        android:background="@android:color/transparent"
        android:drawableLeft="@mipmap/img_login_pwd"
        android:drawablePadding="@dimen/px_10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/text_size_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/text_color_999" />

    <include layout="@layout/item_login_but_layout" />

</LinearLayout>