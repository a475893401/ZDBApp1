<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/honesty_add_info_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_hg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/layout_height_wrap_content"
                android:background="@color/withe"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="转单宝诚信保证计划:"
                    android:textColor="@color/red"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_24"
                    android:lineSpacingMultiplier="1.2"
                    android:text="1.为保障交易安全、提升店辅信誉度推出的一项措施。其宗旨为让有实力、诚信经营的店铺获取更多的订单。\n2.转单宝会在您的店辅展示页添加专属标志，以区别其它店铺，从而树立值得信赖的品牌形象。\n3.加入诚信保障后，抢单比例放大。（2000元保证金可累计抢4000元订单，以此类推）"
                    android:textColor="@color/text_color_999"
                    android:textSize="@dimen/text_size_16" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_20"
                android:background="@color/fg_bg_color" />

            <LinearLayout
                style="@style/layout_height_40"
                android:layout_marginTop="0.6dp"
                android:background="@color/withe"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="店铺名称："
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/ah_shop_ed_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/text_color_333"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_height_40"
                android:layout_marginTop="@dimen/divider_height"
                android:background="@color/withe"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="店铺余额："
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/text_size_16" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/ah_shop_ed_bluance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@null"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/ah_shop_ed_put_blance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:padding="2dp"
                        android:text="立即充值  "
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                style="@style/layout_height_40"
                android:layout_marginTop="@dimen/divider_height"
                android:background="@color/withe"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="保证金额："
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left"
                    android:text="￥2000.00"
                    android:textColor="@color/text_color_333"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout_height_wrap_content"
                android:layout_marginTop="@dimen/divider_height"
                android:background="@color/withe"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/grade1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="支付密码："
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/text_size_16" />

                <EditText
                    android:paddingLeft="@dimen/px_16"
                    android:maxLines="1"
                    android:id="@+id/ah_honet_get_pay"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/px_80"
                    android:layout_weight="1"
                    android:background="@drawable/pass_hg"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="@color/text_color_333"
                    android:textSize="@dimen/text_size_16" />

            </LinearLayout>

            <LinearLayout
                android:background="@color/main_hg"
                style="@style/layout_height_wrap_content"
                android:gravity="right">
                <TextView
                    android:id="@+id/ah_honet_get_paypwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px_16"
                    android:padding="@dimen/px_4"
                    android:text="忘记密码?"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <Button
                android:id="@+id/hs_addhonesty_btn_ok"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_marginTop="@dimen/px_40"
                android:background="@drawable/btn_blue_bg"
                android:text="确认加入"
                android:textColor="@color/withe"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>