<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_hg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        style="@style/layout_height_wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发单价格："
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/bill_info_order_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="￥ 00"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:layout_marginTop="@dimen/divider_height"
        style="@style/layout_height_wrap_content"
        android:id="@+id/bill_info_jiedan"
        android:drawableRight="@mipmap/app_go_back"
        android:ellipsize="end"
        android:enabled="true"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:visibility="gone"
        android:layout_marginBottom="@dimen/px_16"
        android:layout_marginTop="@dimen/divider_height"
        android:drawableRight="@mipmap/app_go_back"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/text_size_16"
        style="@style/layout_height_wrap_content"
        android:id="@+id/bill_bidding_num" />

</LinearLayout>