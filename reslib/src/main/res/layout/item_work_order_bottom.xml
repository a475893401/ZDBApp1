<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        style="@style/layout_height_wrap_content">

        <TextView
            android:gravity="center_vertical"
            android:text="我"
            android:id="@+id/name"
            android:layout_weight="1"
            android:drawablePadding="@dimen/px_8"
            android:drawableLeft="@mipmap/me_img"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/des_time"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/order_sn"
        android:layout_marginTop="@dimen/divider_height"
        android:text="工单编号"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/text_size_16"
        style="@style/layout_height_wrap_content" />

    <TextView
        android:lineSpacingMultiplier="1.2"
        android:id="@+id/order_des"
        android:layout_marginTop="@dimen/divider_height"
        android:text="问题描述"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/text_size_16"
        style="@style/layout_height_wrap_content" />

    <include layout="@layout/item_recycler_img"/>



</LinearLayout>