<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/item_shop_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_16"
        android:background="@color/main_hg" />

    <LinearLayout
        style="@style/layout_height_wrap_content"
        android:layout_marginBottom="@dimen/divider_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_shop_img"
            android:layout_width="@dimen/main_shop_list_size"
            android:layout_height="@dimen/main_shop_list_size"
            android:scaleType="centerInside"
            android:src="@mipmap/img_shop_msg" />

        <TextView
            android:id="@+id/item_shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_8"
            android:layout_weight="1"
            android:text="我的消息"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:layout_marginRight="@dimen/px_8"
            android:id="@+id/item_shop_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yuan_msg_hg_red"
            android:gravity="center"
            android:text=""
            android:textColor="@color/withe"
            android:textSize="@dimen/text_size_8"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/item_shop_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/app_go_back" />
    </LinearLayout>
</LinearLayout>