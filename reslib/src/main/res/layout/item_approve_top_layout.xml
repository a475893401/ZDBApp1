<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:background="@color/withe"
    android:paddingTop="@dimen/px_20"
    android:paddingBottom="@dimen/px_20"
    android:id="@+id/approve_hint_layout"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/approve_hint_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_approve_success" />

    <TextView
        android:id="@+id/approve_hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的店铺已认证成功"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/hint_reason_layout"
        android:padding="@dimen/px_12"
        android:layout_marginTop="@dimen/px_8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="@dimen/px_8"
            android:lineSpacingMultiplier="1.2"
            android:id="@+id/approve_hint_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>
</LinearLayout>