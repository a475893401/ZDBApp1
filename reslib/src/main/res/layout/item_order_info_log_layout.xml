<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/divider_height"
    android:layout_height="wrap_content">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/item_log_order_info_layout"
        android:layout_marginBottom="@dimen/divider_height"
        style="@style/layout_height_wrap_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="订单状态"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_log_order_stats"
                android:gravity="left"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_16"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_log_order_code"
            android:layout_marginTop="@dimen/px_8"
            android:text=""
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        style="@style/layout_height_wrap_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_log_img"
            android:src="@mipmap/img_log_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="@dimen/px_12"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:lineSpacingMultiplier="1.2"
                android:id="@+id/item_log_name"
                android:text=""
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_log_time"
                android:layout_marginTop="@dimen/px_8"
                android:text=""
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
