<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/withdraw_top_layout"
    android:visibility="gone"
    android:orientation="vertical">

    <LinearLayout
        style="@style/layout_height_wrap_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/divider_height">

        <TextView
            android:id="@+id/withdraw_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="提现余额"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/withdraw_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/img_recharge"
            android:drawablePadding="@dimen/px_8"
            android:gravity="center"
            android:text="提现账户管理"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>


    <TextView
        android:id="@+id/withdraw_no_back"
        style="@style/layout_height_wrap_content"
        android:layout_height="@dimen/px_100"
        android:layout_marginBottom="@dimen/px_16"
        android:layout_marginTop="@dimen/px_16"
        android:drawableRight="@mipmap/app_go_back"
        android:gravity="center_vertical"
        android:text="马上去添加银行卡"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone" />
</LinearLayout>