<?xml version="1.0" encoding="utf-8"?>
<app.zhuandanbao.com.reslib.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            style="@style/layout_height_40"
            android:background="@color/main_text_color"
            android:gravity="center"
            android:text="温馨提示"
            android:textColor="@color/withe"
            android:textSize="@dimen/text_size_18" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/dialog_content_layout"
            style="@style/layout_height_wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center|left">

            <TextView
                android:lineSpacingMultiplier="1.2"
                android:id="@+id/dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/px_16"
                android:text=""
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout_height_40"
            android:layout_weight="0.2"
            android:background="@color/withe"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="#DDDDDD"
                android:padding="1dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/dialog_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:paddingBottom="8dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="8dp"
                    android:text="取消"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="#DDDDDD"
                android:padding="1dp">

                <TextView
                    android:id="@+id/dialog_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/back_bg_color"
                    android:paddingBottom="8dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="8dp"
                    android:text="确定"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</app.zhuandanbao.com.reslib.widget.SquareLayout>