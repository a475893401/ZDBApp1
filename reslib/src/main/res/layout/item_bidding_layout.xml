<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/withe"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/layout_height_wrap_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="竞价"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:layout_alignParentRight="true"
            android:padding="@dimen/px_8"
            android:src="@mipmap/img_x" />
    </RelativeLayout>

    <LinearLayout
        style="@style/layout_height_wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原订单价："
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/bidding_order_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/px_8"
            android:text="100"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/divider_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="竞  单  价："
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:inputType="phone"
            android:maxLines="1"
            android:id="@+id/bidding_money"
            style="@style/layout_height_wrap_content"
            android:drawablePadding="@dimen/px_8"
            android:hint="请输入竞单价格"
            android:paddingLeft="0dp"
            android:textColor="@color/red"
            android:textColorHint="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/px_16"
        style="@style/layout_height_wrap_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/but_layout_hg_bule"/>
    </LinearLayout>
</LinearLayout>