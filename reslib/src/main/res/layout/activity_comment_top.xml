<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/order_sn"
        android:text="订单编号"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/text_color_333"
        style="@style/layout_height_wrap_content" />

    <TextView
        android:maxLines="1"
        android:id="@+id/order_jiedan"
        android:layout_marginTop="@dimen/divider_height"
        android:drawableRight="@mipmap/app_go_back"
        android:text="接单店铺"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/text_color_333"
        style="@style/layout_height_wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/divider_height"
        android:id="@+id/order_amount"
        android:layout_marginBottom="@dimen/px_16"
        android:text="交易金额"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/red"
        style="@style/layout_height_wrap_content" />

</LinearLayout>