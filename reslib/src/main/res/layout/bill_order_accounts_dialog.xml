<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/withe"
    android:paddingRight="@dimen/px_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结算金额："
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/bill_order_accounts_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300.00"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入您的转单宝支付密码" />

            <EditText
                android:id="@+id/bill_order_accounts_pwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/pass_hg"
                android:inputType="textPassword"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text=""
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/bill_order_accounts_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:padding="2dp"
                android:text="找回密码"
                android:textColor="@color/back_bg_color"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

        <TextView
            android:id="@+id/bill_order_accounts_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="* 请输入密码"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_14"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>
