<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_hg"
    android:orientation="vertical">

    <LinearLayout
        style="@style/layout_height_wrap_content"
        android:background="@color/main_hg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商品信息"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />

        <Button
            android:id="@+id/item_save"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_60"
            android:background="@drawable/btn_blue_2_bg"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/withe"
            android:textColorHint="@color/text_color_666"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/divider_height"
        android:background="@color/withe"
        android:paddingLeft="@dimen/px_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称："
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/item_name"
            style="@style/layout_height_wrap_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="请填写名称"
            android:text=""
            android:textColor="@color/text_color_333"
            android:textColorHint="@color/text_color_666"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/divider_height"
        android:background="@color/withe"
        android:paddingLeft="@dimen/px_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品描述："
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/item_des"
            style="@style/layout_height_wrap_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="请填商品描述"
            android:text=""
            android:textColor="@color/text_color_333"
            android:textColorHint="@color/text_color_666"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/divider_height"
        android:layout_marginTop="@dimen/divider_height"
        android:background="@color/withe"
        android:paddingLeft="@dimen/px_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品数量："
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/item_num"
            style="@style/layout_height_wrap_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="请填商品数量"
            android:inputType="number"
            android:text="1"
            android:textColor="@color/text_color_333"
            android:textColorHint="@color/text_color_666"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_8"
        android:layout_marginTop="@dimen/px_8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/work_uplod_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="上传附件"
                android:textColor="@color/main_text_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(最多上传3张，每张小于2M)"
                android:textColor="@color/text_color_666"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

        <include layout="@layout/item_recycler_img" />
    </LinearLayout>

</LinearLayout>