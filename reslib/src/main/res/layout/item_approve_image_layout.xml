<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/px_8"
    android:layout_marginRight="@dimen/px_8"
    android:layout_marginTop="@dimen/px_16"
    android:background="@color/withe"
    android:gravity="center"
    android:orientation="vertical">

    <app.zhuandanbao.com.reslib.widget.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ededed">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/app_defant"
                android:visibility="gone" />

            <TextView
                android:id="@+id/show_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_gray_yuan"
                android:gravity="center"
                android:text="上传"
                android:textColor="@color/withe"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </app.zhuandanbao.com.reslib.widget.SquareLayout>

    <TextView
        android:maxLines="1"
        android:id="@+id/hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20"
        android:textColor="@color/text_color_666"
        android:textSize="@dimen/text_size_14" />
</LinearLayout>
