<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/withe"
        android:paddingLeft="@dimen/px_16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="手机号码"
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="请输入手机号码"
            android:textColorHint="@color/text_color_999"
            android:inputType="phone"
            android:background="@android:color/transparent"
            android:id="@+id/mobile"
            android:text=""
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            style="@style/layout_height_wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout_height_wrap_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:padding="@dimen/px_16"
            android:layout_width="match_parent"
            android:id="@+id/input_content"
            android:layout_marginTop="@dimen/divider_height"
            android:layout_height="@dimen/px_240"
            android:gravity="top"
            android:hint="请输入仲裁原因"
            android:textColorHint="@color/text_color_999"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:background="@drawable/gray_hg" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/px_60"
        android:padding="@dimen/px_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/but_layout_hg_bule"/>

    </LinearLayout>
</LinearLayout>