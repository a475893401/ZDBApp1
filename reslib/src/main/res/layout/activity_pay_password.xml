<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/main_hg"
    android:layout_height="match_parent">


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/old_pass_layout"
        android:background="@color/withe"
        android:orientation="horizontal"
        android:paddingRight="@dimen/px_16"
        android:paddingLeft="@dimen/px_16"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="旧  密  码："
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/pay_old_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="请输入以前的支付密码"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:background="@android:color/transparent"
            style="@style/layout_height_40"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/withe"
        android:orientation="horizontal"
        android:paddingRight="@dimen/px_16"
        android:paddingLeft="@dimen/px_16"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="支付密码："
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textColorHint="@color/text_color_999"
            android:id="@+id/pay_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="请输入支付密码"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:background="@android:color/transparent"
            style="@style/layout_height_40"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/divider_height"
        android:background="@color/withe"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/px_16"
        android:paddingLeft="@dimen/px_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="确认密码："
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textColorHint="@color/text_color_999"
            android:id="@+id/re_pay_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="请再次输入支付密码"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:background="@android:color/transparent"
            style="@style/layout_height_40"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/divider_height"
        android:background="@color/withe"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/px_16"
        android:paddingLeft="@dimen/px_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="验  证  码："
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textColorHint="@color/text_color_999"
            android:id="@+id/pay_pass_verify"
            android:inputType="number"
            android:maxLines="1"
            android:layout_weight="1"
            android:hint="请输入验证码"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:background="@android:color/transparent"
            style="@style/layout_height_40"/>

        <TextView
            android:id="@+id/get_verify_but"
            android:text="获取验证码"
            android:textColor="@color/withe"
            android:textSize="@dimen/text_size_12"
            android:background="@drawable/btn_blue_bg"
            android:padding="@dimen/px_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:paddingRight="@dimen/px_16"
        android:paddingLeft="@dimen/px_16"
        android:layout_marginTop="@dimen/px_80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_but_bule_hg"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/px_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/forget_password"
            android:layout_marginRight="@dimen/px_16"
            android:layout_alignParentRight="true"
            android:padding="@dimen/px_10"
            android:text="忘记密码？"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/px_16"
        android:lineSpacingMultiplier="1.2"
        android:text="温馨提示：\n支付密码是转单宝账户财务支出管理的支付验证密钥，主要用于订单支付、结算、账户提现等，请注意保密，定期修改！"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/text_size_16"
        style="@style/layout_height_wrap_content" />
</LinearLayout>