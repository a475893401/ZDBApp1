<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/withe"
    android:padding="@dimen/px_16"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_20"
            android:layout_marginTop="@dimen/px_40"
            android:gravity="center"
            android:text="手持身份证拍照要求"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/diver_bg_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_40"
            android:lineSpacingMultiplier="1.5"
            android:text="1、请上传清晰彩色照片原件，身份证各项信息及头像清晰可见，容易识别。\n2、须免冠、五官清晰可见，完整露耳朵。"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:gravity="center"
            android:text="身份证正面示例"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16"
            android:visibility="invisible" />

        <app.zhuandanbao.com.reslib.widget.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/img_card_hint" />
        </app.zhuandanbao.com.reslib.widget.SquareLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="身份证反面示例"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16"
            android:visibility="invisible" />

        <app.zhuandanbao.com.reslib.widget.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/img_card_back" />
        </app.zhuandanbao.com.reslib.widget.SquareLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_margin="@dimen/px_16"
                android:id="@+id/finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_approve_x" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
