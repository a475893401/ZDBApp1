<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_super_recycler_view" />

            <LinearLayout
                style="@style/layout_height_wrap_content"
                android:layout_marginTop="@dimen/divider_height"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入支付密码"
                    android:textColor="@color/text_color_333"
                    android:textSize="@dimen/text_size_16" />

                <EditText
                    android:textColor="@color/text_color_333"
                    android:textSize="@dimen/text_size_16"
                    android:id="@+id/input_pay_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_88"
                    android:layout_marginTop="@dimen/px_8"
                    android:background="@drawable/pass_hg"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/px_8"
                    android:paddingLeft="@dimen/px_20"
                    android:paddingRight="@dimen/px_8"
                    android:paddingTop="@dimen/px_8" />

            </LinearLayout>

            <LinearLayout
                android:gravity="right"
                style="@style/layout_height_wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记支付密码？"
                    android:textColor="@color/text_color_666"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/pay_forget_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_4"
                    android:padding="@dimen/px_8"
                    android:text="立即找回"
                    android:textColor="@color/back_bg_color"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/but_layout_hg_bule" />
    </LinearLayout>
</LinearLayout>