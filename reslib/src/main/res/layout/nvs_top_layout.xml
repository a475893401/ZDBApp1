<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/nvs_top_hg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/nvs_back"
        android:drawablePadding="@dimen/px_6"
        android:paddingLeft="@dimen/px_10"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:textColor="@color/nvs_top_text_color"
        android:text=""
        android:drawableLeft="@mipmap/img_back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:visibility="gone"
        android:id="@+id/nvs_title"
        android:textColor="@color/nvs_top_text_color"
        android:layout_centerInParent="true"
        android:text="title"
        android:textSize="@dimen/nvs_title_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/nvs_right"
        android:paddingRight="@dimen/px_8"
        android:textSize="18sp"
        android:drawablePadding="@dimen/px_4"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/nvs_top_text_color"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</RelativeLayout>