<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:visibility="gone"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/text_size_16"
        android:layout_marginTop="@dimen/px_16"
        android:id="@+id/order_info_card"
        android:text="暂无订单贺卡"
        style="@style/layout_height_wrap_content" />

    <TextView
        android:visibility="gone"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/text_size_16"
        android:layout_marginTop="@dimen/px_16"
        android:id="@+id/order_info_msg"
        android:text="暂无订单备注"
        style="@style/layout_height_wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/px_16"
        style="@style/layout_height_wrap_content"
        android:id="@+id/order_info_source_name"
        android:drawableRight="@mipmap/app_go_back"
        android:enabled="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/text_color_333"
        android:text="发单方" />

    <TextView
        android:layout_marginTop="@dimen/px_16"
        android:id="@+id/order_info_sn"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/text_color_333"
        android:text="订单编号"
        style="@style/layout_height_wrap_content" />

    <include layout="@layout/item_order_info_kind_layout"/>

    <include layout="@layout/item_order_info_sign_layout"/>
</LinearLayout>