<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_height_wrap_content"
    android:gravity="center_vertical"
    android:layout_marginBottom="@dimen/divider_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_back_img"
        android:layout_width="@dimen/px_100"
        android:layout_height="@dimen/px_100"
        android:scaleType="centerInside"
        android:src="@mipmap/app_defant" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/px_16"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px_8"
        android:paddingTop="@dimen/px_8">

        <TextView
            android:id="@+id/item_back_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="姓名"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/item_back_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="中国银行（52214）"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <CheckBox
        android:visibility="gone"
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:button="@drawable/a_finance_bank_check"
        android:padding="@dimen/px_10" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/app_go_back" />
</LinearLayout>