<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        style="@style/layout_height_wrap_content">

        <TextView
            android:gravity="center_vertical"
            android:text="手  机  号"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16"
            android:drawablePadding="@dimen/px_8"
            android:drawableLeft="@mipmap/reg_hone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/reg_mobile"
            android:inputType="phone"
            android:background="@android:color/transparent"
            android:layout_marginLeft="@dimen/px_10"
            android:maxLines="1"
            android:hint="请输入手机号"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_80" />
    </LinearLayout>

    <View
        android:background="@color/text_color_999"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        style="@style/layout_height_wrap_content">

        <TextView
            android:gravity="center_vertical"
            android:text="密        码"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16"
            android:drawablePadding="@dimen/px_8"
            android:drawableLeft="@mipmap/reg_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/reg_password"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:layout_marginLeft="@dimen/px_10"
            android:maxLines="1"
            android:hint="请输入登录密码"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_80" />
    </LinearLayout>

    <View
        android:background="@color/text_color_999"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        style="@style/layout_height_wrap_content">

        <TextView
            android:gravity="center_vertical"
            android:text="确认密码"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16"
            android:drawablePadding="@dimen/px_8"
            android:drawableLeft="@mipmap/reg_isok_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/reg_two_password"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:layout_marginLeft="@dimen/px_10"
            android:maxLines="1"
            android:hint="请确认登录密码"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_80" />
    </LinearLayout>

    <View
        android:background="@color/text_color_999"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        style="@style/layout_height_wrap_content">

        <TextView
            android:gravity="center_vertical"
            android:text="验  证  码"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16"
            android:drawablePadding="@dimen/px_8"
            android:drawableLeft="@mipmap/reg_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/reg_verify"
            android:inputType="number"
            android:background="@android:color/transparent"
            android:layout_marginLeft="@dimen/px_10"
            android:maxLength="8"
            android:hint="请输入验证码"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_80" />

        <TextView
            android:id="@+id/get_verify_but"
            android:padding="@dimen/px_10"
            android:background="@drawable/btn_blue_bg"
            android:text="获取验证码"
            android:textColor="@color/withe"
            android:textSize="@dimen/text_size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/text_color_999"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"/>

    <Button
        android:id="@+id/reg_but"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_60"
        android:background="@drawable/btn_blue_bg"
        android:text="立即注册"
        android:textColor="@color/withe"
        android:textSize="@dimen/text_size_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_80" />
</LinearLayout>