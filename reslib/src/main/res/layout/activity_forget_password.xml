<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingRight="@dimen/px_16"
        android:paddingLeft="@dimen/px_16"
        android:background="@color/withe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="绑定手机"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/forget_mobile"
            android:enabled="true"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:inputType="phone"
            style="@style/layout_height_40" />

        <TextView
            android:visibility="visible"
            android:text="已绑定"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/text_size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:paddingRight="@dimen/px_16"
        android:paddingLeft="@dimen/px_16"
        android:background="@color/withe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="支付密码"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textColorHint="@color/text_color_999"
            android:id="@+id/forget_pass"
            android:background="@android:color/transparent"
            android:hint="请输入新的支付密码"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:inputType="textPassword"
            style="@style/layout_height_40" />

    </LinearLayout>

    <LinearLayout
        android:paddingRight="@dimen/px_16"
        android:paddingLeft="@dimen/px_16"
        android:background="@color/withe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="再次确认"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textColorHint="@color/text_color_999"
            android:id="@+id/forget_re_pass"
            android:background="@android:color/transparent"
            android:hint="请再次输入支付密码"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:inputType="textPassword"
            style="@style/layout_height_40" />

        <TextView
            android:visibility="gone"
            android:id="@+id/amend_hint_text"
            android:text="已绑定"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/text_size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/divider_height"
        android:paddingRight="@dimen/px_16"
        android:paddingLeft="@dimen/px_16"
        android:background="@color/withe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="验  证  码"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textColorHint="@color/text_color_999"
            android:id="@+id/forget_verify_code"
            android:background="@android:color/transparent"
            android:hint="请输入验证码"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:inputType="number"
            style="@style/layout_height_40" />

        <TextView
            android:id="@+id/forget_get_verify_but"
            android:padding="@dimen/px_8"
            android:background="@drawable/btn_blue_bg"
            android:text="获取验证码"
            android:textColor="@color/withe"
            android:textSize="@dimen/text_size_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:paddingRight="@dimen/px_20"
        android:paddingLeft="@dimen/px_20"
        android:layout_marginTop="@dimen/px_80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_but_bule_hg"/>
    </LinearLayout>
</LinearLayout>