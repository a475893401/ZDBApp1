<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/withdraw_con_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_hg"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#6d3c0e" />

        <LinearLayout
            style="@style/layout_height_wrap_content"
            android:background="@color/withe"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/orders_grab_img"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="提现所需条件："
                android:textColor="#6d3c0e"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/withdrawals_con_1"
            style="@style/layout_height_wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:drawableLeft="@mipmap/orders_grab_dian"
            android:drawableRight="@mipmap/app_go_back"
            android:text="店铺还没有设置支付密码"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone" />

        <TextView
            android:id="@+id/withdrawals_con_2"
            style="@style/layout_height_wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:drawableLeft="@mipmap/orders_grab_dian"
            android:drawableRight="@mipmap/app_go_back"
            android:text="店铺还没有完成实名认证"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#6d3c0e" />
    </LinearLayout>
</LinearLayout>