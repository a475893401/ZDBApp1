<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/withe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/layout_height_wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:src="@mipmap/zdb_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="@dimen/px_16"
        android:layout_marginTop="@dimen/divider_height"
        android:orientation="vertical"
        android:gravity="center"
        style="@style/layout_height_wrap_content">

        <TextView
            android:text="您已绑定"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/px_16"
            android:text="15123166707"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/text_size_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_but_bule_hg"/>
    </LinearLayout>

</LinearLayout>