<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pay_account"
        android:gravity="center_vertical"
        android:text="充值账户："
        android:textColor="@color/text_color_999"
        android:textSize="@dimen/text_size_16"
        style="@style/layout_height_40" />

    <LinearLayout
        android:layout_marginTop="@dimen/divider_height"
        android:orientation="horizontal"
        style="@style/layout_height_wrap_content">

        <TextView
            android:text="充值金额："
            android:textColor="@color/text_color_999"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:maxLines="1"
            android:inputType="number"
            android:id="@+id/pay_money"
            android:background="@android:color/transparent"
            android:hint="输入金额不小于10且为10的倍数"
            android:textColorHint="@color/text_color_999"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/divider_height"
        android:text="充值方式"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/text_size_16"
        android:gravity="center_vertical"
        android:background="@color/main_hg"
        style="@style/layout_height_40" />

</LinearLayout>