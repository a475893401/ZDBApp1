<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/withe"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/px_20">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="当前保证金"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/honest_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500元"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/px_20">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="最低保证金"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/honest_grade_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000元"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_20"
                android:text="追加的金额"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

            <android.support.design.widget.TextInputLayout
                android:paddingLeft="@dimen/px_8"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_height="@dimen/px_80"
                android:layout_weight="1"
                android:hint="请输入你要缴纳的保证金">

                <android.support.design.widget.TextInputEditText
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textColorHint="@color/text_color_999"
                    android:id="@+id/need_honest_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/text_color_333"
                    android:textSize="@dimen/text_size_16" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_20"
                android:text="元"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>

        <LinearLayout
            android:paddingRight="@dimen/px_8"
            android:paddingBottom="@dimen/px_8"
            android:paddingTop="@dimen/px_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_20"
                android:text="支 付 密 码 "
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

            <android.support.design.widget.TextInputLayout
                android:paddingLeft="@dimen/px_8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:background="@drawable/pass_hg"
                android:gravity="right"
                android:hint="请输入转单宝支付密码">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/pass_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="@color/text_color_333"
                    android:textColorHint="@color/text_color_999"
                    android:textSize="@dimen/text_size_16" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@color/main_hg"
            android:gravity="right"
            style="@style/layout_height_wrap_content">

            <TextView
                android:id="@+id/forget_password"
                android:padding="@dimen/px_8"
                android:text="忘记密码？"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:paddingBottom="0dp"
            style="@style/layout_height_wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关于诚信保障计划"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/withe"
            android:lineSpacingMultiplier="1.2"
            android:padding="@dimen/px_20"
            android:text="@string/add_honest_hint_message"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/text_size_14" />

        <Button
            android:id="@+id/ok_but"
            android:layout_margin="@dimen/px_20"
            android:text="立即提交诚信保证金"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/withe"
            android:background="@drawable/btn_blue_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80" />
    </LinearLayout>
</ScrollView>