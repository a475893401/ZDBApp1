<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/layout_height_wrap_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/withe"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/other_sn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/main_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/other_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单状态"
                android:textColor="@color/red"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/other_shop"
            style="@style/layout_height_wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:text="订单来源"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/other_order_amount"
            style="@style/layout_height_wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:text="订单金额"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_16" />

        <TextView
            style="@style/layout_height_wrap_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_hg"
            android:text="配送信息"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />

        <RadioGroup
            android:id="@+id/dv_style_rg"
            style="@style/layout_height_wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/dv_style_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="送货上门"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

            <RadioButton
                android:id="@+id/dv_style_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="快递配送"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/other_dv_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/divider_height"
                android:background="@color/withe"
                android:paddingLeft="@dimen/px_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送日期："
                    android:textColor="@color/text_color_999"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/other_date"
                    style="@style/layout_height_wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/app_go_back"
                    android:hint="请选择配送日期"
                    android:text=""
                    android:textColor="@color/text_color_333"
                    android:textColorHint="@color/text_color_999"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/divider_height"
                android:background="@color/withe"
                android:paddingLeft="@dimen/px_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送时间："
                    android:textColor="@color/text_color_999"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/other_time"
                    style="@style/layout_height_wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/app_go_back"
                    android:hint="请选择配送时间"
                    android:textColor="@color/text_color_333"
                    android:textColorHint="@color/text_color_999"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe"
            android:paddingLeft="@dimen/px_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送地区："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/other_area"
                style="@style/layout_height_wrap_content"
                android:layout_weight="1"
                android:drawableRight="@mipmap/app_go_back"
                android:hint="请选择配送地区"
                android:textColor="@color/text_color_333"
                android:textColorHint="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe"
            android:paddingLeft="@dimen/px_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/other_address"
                style="@style/layout_height_wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入配送的详细地址"
                android:textColor="@color/text_color_333"
                android:textColorHint="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <TextView
            style="@style/layout_height_wrap_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_hg"
            android:text="收货信息"
            android:textColor="@color/text_color_333"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe"
            android:paddingLeft="@dimen/px_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收  货  人："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/other_name"
                style="@style/layout_height_wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入收货人"
                android:textColor="@color/text_color_333"
                android:textColorHint="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe"
            android:paddingLeft="@dimen/px_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电        话："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/other_phone"
                style="@style/layout_height_wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入收货人电话"
                android:textColor="@color/text_color_333"
                android:textColorHint="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe"
            android:paddingLeft="@dimen/px_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单备注："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/other_order_msg"
                style="@style/layout_height_wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入订单备注"
                android:text=""
                android:textColor="@color/text_color_333"
                android:textColorHint="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe"
            android:paddingLeft="@dimen/px_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单贺卡："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/other_order_card"
                style="@style/layout_height_wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入订单贺卡"
                android:text=""
                android:textColor="@color/text_color_333"
                android:textColorHint="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_height"
            android:background="@color/withe"
            android:paddingLeft="@dimen/px_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家备注："
                android:textColor="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/other_shop_msg"
                style="@style/layout_height_wrap_content"
                android:layout_weight="1"
                android:background="@color/withe"
                android:drawableRight="@mipmap/app_go_back"
                android:hint="请输入商家备注"
                android:text=""
                android:textColor="@color/text_color_333"
                android:textColorHint="@color/text_color_999"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>


        <LinearLayout
            style="@style/layout_height_wrap_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_hg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="商品信息"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/other_amend_add_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/main_text_color"
                android:padding="@dimen/px_10"
                android:text="+ 添加"
                android:textColor="@color/withe"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>