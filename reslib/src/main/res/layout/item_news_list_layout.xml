<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/px_16"
    android:layout_width="match_parent"
    android:background="@color/withe"
    android:layout_marginBottom="@dimen/divider_height"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingBottom="@dimen/px_14"
        android:paddingTop="@dimen/px_14"
        android:layout_marginRight="@dimen/px_10"
        android:orientation="vertical"
        android:layout_weight="0.7"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_news_title"
            android:layout_weight="1"
            android:text="基督教大家的境况点击肯德基肯德基肯德基看到JDK角度看"
            android:maxLines="2"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_news_time"
            android:text="基督教基督教"
            android:maxLines="1"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_color_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_news_img"
            android:scaleType="centerCrop"
            android:src="@mipmap/app_defant"
            android:layout_width="@dimen/px_180"
            android:layout_height="@dimen/px_180" />
    </LinearLayout>

</LinearLayout>